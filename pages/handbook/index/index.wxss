/* 页面头部样式 */
.page-head {
  display: flex;
  z-index: 999;
}

/* 页头的年份，页头标题，预算容器，消费日期 */
.page-head-year,
.page-head-sum,
.budget-container,
.navigator-time {
  margin: 0 10rpx;
  z-index: 999;
}

/* 消费信息整体 */
.navigator-text {
  /* border: green 1px solid; */
  display: flex;
  width: 100%;
  z-index: 1;
}

/* 消费日期 */
.navigator-time {
  font-size: 27rpx;
  color: #8D86E6;
}

/* 消费类型 */
.navigator-text1 {
  color: #a85060;
  width: 120rpx;
}

/* 消费名称 */
.navigator-text2 {
  flex: 2;
}

/* 消费金额 */
.navigator-text3 {
  flex: 1;
}

/* 复制消费记录的区域 */
.export-area {
  position: fixed;
  top: 150rpx;
  left: 0rpx;
  width: 100%;
  height: 100vh;
  z-index: 1;
}

/* 复制消费记录按钮 */
.export-btn {
  border-radius: 20rpx;
  border: rgb(118, 116, 119) 1px solid;
  width: 175rpx;
  height: 120rpx;
  padding: 10rpx;
}

.export-btn:hover {
  opacity: 0.7;
  /* 设置点击时的透明度 */
}

/* 记账总笔数 */
.total-count-container{
  font-size: 30rpx;
  height: 20rpx;
  color: #7a7a80;
}
.total-count {
  color: rgb(80, 80, 32);
  font-weight: bold;
  font-size: 50rpx;
  margin: 0 10rpx;
}