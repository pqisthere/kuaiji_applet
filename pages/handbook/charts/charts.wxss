.container-head {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  /* 水平居中对齐 */
}

.canvas {
  width: 100%;
  /* height: 100vh; */
  height: 580rpx;
  margin-top: 20rpx;
  /* border:blueviolet 1px solid; */
}

.switch {
  position: fixed;
  top: 670rpx;
  right: 5rpx;
  padding: 10rpx;
  border: rgb(118, 116, 119) 1px solid;
  border-radius: 20rpx;
}

/* 切换总账按钮 */
.switch:active {
  opacity: 0.7;
  /* 设置点击时的透明度 */
}

/* 标注小方块 */
.color-box {
  width: 20px;
  height: 20px;
  display: inline-block;
  margin-right: 10rpx;
}

/* 标注:包括标注小框 消费类型名 百分比 总花费金额 */
.label {
  margin: 10rpx 0rpx 10rpx 190rpx;
  display: flex;
  align-items: center; /* 确保内部项目垂直居中 */
}

/* 选中扇形,相应的标注放大 */
.selected {
  font-size: 40rpx;
  color: #9c2828;
}