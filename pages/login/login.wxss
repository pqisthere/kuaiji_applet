.content {
  margin: 160rpx 30rpx 60rpx 30rpx;
}

.content-head {
  font-size: 40rpx;
  font-weight: 400;
  padding: 20rpx 0;
  text-align: center;
  margin-bottom: 20rpx;
}

.row {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

/* 账号密码图标 */
.icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

/* 眼睛图标 */
.eye-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}

.input,
.name-input {
  flex: 1;
  height: 60rpx;
  border-bottom: 1px solid #ccc;
  border-radius: 5px;
  padding: 0 10rpx;
  font-size: 38rpx;
}

.button,
.back-button,
.logout-button,
.change-button,
.unregister-button {
  display: block;
  width: 90%;
  height: 80rpx;
  color: #fff;
  border-radius: 5px;
  font-size: 35rpx;
  text-align: center;
  line-height: 40px;
  margin: 0 auto;
  margin-top: 20rpx;
}

.back-button,
.logout-button,
.change-button,
.unregister-button {
  background-color: #E6998D;
}